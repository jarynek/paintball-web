<h2>{{ section.title }}</h2>
<form action="/order" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="name">Jméno</label>
                <input type="text" name="name" class="form-control" id="name" aria-describedby="name" placeholder="Vaše jméno">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="user_name">Příjmení</label>
                <input type="text" name="user_name" class="form-control" id="user_name" placeholder="Vaše příjmení">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Váš e-mail">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="players_count">Počet hráčů</label>
                <input type="number" name="players_count" class="form-control" id="players_count" placeholder="Počet hráčů">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5">
            <label for="">Datum čas</label>
            <input id='datetimepicker1' type='text' name="date_time" class="form-control" />
        </div>
        <div class="col-md-7">
            <label for="players_count">Počet hráčů</label>
            <input type="number" name="players_count" class="form-control" id="players_count" placeholder="Počet hráčů">
        </div>
    </div>


    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>